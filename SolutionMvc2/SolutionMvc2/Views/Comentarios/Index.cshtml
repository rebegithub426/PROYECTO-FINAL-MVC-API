@model IEnumerable<SolutionMvc2.Models.Comentario>

@{
    ViewBag.Title = "Index";
}

<h2>Comentarios</h2>

<p>
    @Html.ActionLink("Crear nuevo comentario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Cédula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripción)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Cédula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Comentario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Comentario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Comentario })
        </td>
    </tr>
}

</table>
